
@{
    ViewData["Title"] = "AddService";
}

@model ProjectInformatics.Entities.Subscription

<h2>Add Service</h2>
<form asp-controller="Home" asp-action="AddService">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input type="text" asp-for="Name" />
        <span asp-validation-for="Name" />
    </div>
    <div class="form-group">
        <label asp-for="LastPayment">Date of last payment</label>
        <input type="date" asp-for="LastPayment" />
        <span asp-validation-for="LastPayment" />
    </div>
    <div class="form-group">
        <label asp-for="Period">Period in days</label>
        <input type="number" asp-for="Period" />
        <span asp-validation-for="Period" />
    </div>
    <div class="form-group">
        <label asp-for="Price">Price</label>
        <input type="text" asp-for="Price" />
        <span asp-validation-for="Price" />
    </div>
    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-outline-dark" />
    </div>
</form>

@section Scripts
{}